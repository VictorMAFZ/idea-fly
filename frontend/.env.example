# Frontend Environment Variables Template - IdeaFly Authentication System
# Copy this file to .env.local and fill in your actual values
# Variables públicas de Next.js (prefijo NEXT_PUBLIC_*)

# API Backend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Google OAuth Configuration (Get from Google Cloud Console)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Application Configuration
NEXT_PUBLIC_APP_NAME=IdeaFly
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_DESCRIPTION="Sistema de Autenticación IdeaFly"

# Authentication Configuration
NEXT_PUBLIC_JWT_STORAGE_KEY=ideafly_auth_token
NEXT_PUBLIC_USER_STORAGE_KEY=ideafly_user_data
NEXT_PUBLIC_SESSION_TIMEOUT=1800000

# Development Configuration (set to false in production)
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Feature Flags
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true
NEXT_PUBLIC_ENABLE_EMAIL_AUTH=true
NEXT_PUBLIC_ENABLE_REGISTRATION=true

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_DEFAULT_LOCALE=es-ES